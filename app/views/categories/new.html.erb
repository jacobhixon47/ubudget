<div class="row">
  <div class="col-md-8 col-md-offset-2 col-xs-10 col-xs-offset-1 form-column">
    <h1>New Category</h1>

    <% if @category.errors.any? %>
      <h3>Oops there were some errors. Please try again:</h3>
      <ul>
        <% @category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_for [@user, @category] do |f| %>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name  %>
      </p><br>
      <p>
        <%= f.submit :class => 'btn btn-info my-button-success' %>
      </p>
    <% end %>

  </div>
</div>
