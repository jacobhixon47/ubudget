<h1>Dashboard</h1>

<div class="row">
  <div class="col-md-6">
    <h3>Most Recent Transactions</h3><hr>
      <% @transactions.order('created_at DESC').limit(10).each do |transaction| %>
      <div class="transaction-block">
        <h4><%= transaction.date %> - $<%= '%.02f' %transaction.amount %></h4>
        <p>
          <%= transaction.description %>
        </p>
      </div>
      <% end %>
  </div>
</div>
