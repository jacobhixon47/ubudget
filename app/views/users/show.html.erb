<h1><%= @user.username %></h1><hr>
<div class="row">
  <div class="col-md-6">
    <%= pie_chart @transactions.joins(:category).group(:name).count %>
  </div>
  <div class="col-md-6">
    <%= line_chart Category.all.map { |category|
      {name: category.name, data: category.transactions.group_by_day(:created_at).count }
    }  %>
  </div>
</div>
